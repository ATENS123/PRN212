<Window x:Class="HuynhPhucTanWPF.CustomerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Information" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Customer Info" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock Text="Full Name:"/>
            <TextBox x:Name="txtName"/>

            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtEmail"/>

            <TextBlock Text="Phone:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtPhone"/>

            <TextBlock Text="Password:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="txtPassword"/>

            <TextBlock Text="Birthday:" Margin="0,10,0,0"/>
            <DatePicker x:Name="dpBirthday"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Margin="10" Click="BtnOK_Click"/>
            <Button Content="Cancel" Width="80" Margin="10" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
