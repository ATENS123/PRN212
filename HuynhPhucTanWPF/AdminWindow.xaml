<Window x:Class="HuynhPhucTanWPF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HuynhPhucTanWPF"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
     <Grid Margin="10">
        <TabControl>
            <!-- Tab Customer Management -->
            <TabItem Header="Manage Customers">
                <Grid>
                    <!-- Các nút CRUD -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Add" Width="80" Margin="5" Click="BtnAddCustomer_Click" VerticalAlignment="Top" Height="35"/>
                        <Button Content="Update" Width="80" Margin="5" Click="BtnUpdateCustomer_Click" Height="35" VerticalAlignment="Top"/>
                        <Button Content="Delete" Width="80" Margin="5" Click="BtnDeleteCustomer_Click" VerticalAlignment="Top" Height="35"/>
                        <Button Content="Search" Width="80" Margin="5" Click="BtnSearchCustomer_Click" VerticalAlignment="Top" Height="35"/>
                        <TextBox x:Name="txtSearchCustomer" Width="200" Margin="10,0,10,0" VerticalAlignment="Top" Height="35"/>
                    </StackPanel>

                    <!-- DataGrid hiển thị khách hàng -->
                    <DataGrid x:Name="dgCustomers" Margin="0,50,0,0" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="50"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding CustomerFullName}" Width="150"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding EmailAddress}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab Room Management -->
            <TabItem Header="Manage Rooms">
                <Grid>
                    <!-- Các nút CRUD -->
                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Add" Width="80" Margin="5" Click="BtnAddRoom_Click" VerticalAlignment="Top" Height="35"/>
                        <Button Content="Update" Width="80" Margin="5" Click="BtnUpdateRoom_Click" Height="35" VerticalAlignment="Top"/>
                        <Button Content="Delete" Width="80" Margin="5" Click="BtnDeleteRoom_Click" Height="35" VerticalAlignment="Top"/>
                        <Button Content="Search" Width="80" Margin="5" Click="BtnSearchRoom_Click" Height="35" VerticalAlignment="Top"/>
                        <TextBox x:Name="txtSearchRoom" Width="200" Margin="10,0" Height="35" VerticalAlignment="Top"/>
                    </StackPanel>

                    <!-- DataGrid hiển thị phòng -->
                    <DataGrid x:Name="dgRooms" Margin="0,50,0,0" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding RoomID}" Width="50"/>
                            <DataGridTextColumn Header="Number" Binding="{Binding RoomNumber}" Width="100"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding RoomTypeID}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>


            <!-- Tab Booking -->
            <TabItem Header="Booking">
                <StackPanel Margin="10">
                    <!-- Bộ lọc ngày -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Start Date:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <DatePicker x:Name="dpStart" Width="150"/>
                        <TextBlock Text="End Date:" Margin="20,0,10,0" VerticalAlignment="Center"/>
                        <DatePicker x:Name="dpEnd" Width="150"/>
                        <Button Content="Generate Report" Margin="20,0,0,0" Click="BtnGenerateReport_Click"/>
                    </StackPanel>

                    <!-- DataGrid hiển thị danh sách Booking -->
                    <DataGrid x:Name="dgReport" AutoGenerateColumns="False" Height="250" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingID}" Width="80"/>
                            <DataGridTextColumn Header="Customer Name" Binding="{Binding Customer.CustomerFullName}" Width="150"/>
                            <DataGridTextColumn Header="Room Number" Binding="{Binding Room.RoomNumber}" Width="100"/>
                            <DataGridTextColumn Header="Start Date" Binding="{Binding StartDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="End Date" Binding="{Binding EndDate, StringFormat=dd/MM/yyyy}" Width="100"/>
                            <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice}" Width="100"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding BookingStatus}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
