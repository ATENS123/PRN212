<Window x:Class="HuynhPhucTanWPF.RoomDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room Info" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Room Information" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock Text="Room Number:"/>
            <TextBox x:Name="txtNumber"/>

            <TextBlock Text="Description:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtDescription"/>

            <TextBlock Text="Max Capacity:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtCapacity"/>

            <TextBlock Text="Price/Day:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtPrice"/>

            <TextBlock Text="Status:" Margin="0,10,0,0"/>
            <ComboBox x:Name="cboStatus" Width="150">
                <ComboBoxItem Content="Available" Tag="1"/>
                <ComboBoxItem Content="Unavailable" Tag="0"/>
            </ComboBox>

            <TextBlock Text="Room Type ID:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtRoomTypeId"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Margin="10" Click="BtnOK_Click"/>
            <Button Content="Cancel" Width="80" Margin="10" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
