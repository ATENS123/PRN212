<Window x:Class="HuynhPhucTanWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RoomType Management" Height="500" Width="800">
    <Grid Margin="10">
        <TabControl>
            <!-- Tab Profile -->
            <TabItem Header="My Profile">
                <StackPanel Margin="10">
                    <TextBlock Text="Full Name"/>
                    <TextBox x:Name="txtFullName"/>
                    <TextBlock Text="Email"/>
                    <TextBox x:Name="txtEmail" IsReadOnly="True"/>
                    <TextBlock Text="Phone"/>
                    <TextBox x:Name="txtPhone"/>
                    <Button Content="Update Profile" Margin="0,10" Click="BtnUpdateProfile_Click"/>
                </StackPanel>
            </TabItem>

            <!-- Tab Booking History -->
            <TabItem Header="Booking History">
                <DataGrid x:Name="dgBookings" AutoGenerateColumns="True" Margin="10"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
